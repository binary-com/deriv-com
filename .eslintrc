{
    "parser": "babel-eslint",
    "rules": {
        "strict": 0,
        "camelcase": 0,
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-trailing-spaces": [
            "error",
            {
                "skipBlankLines": true
            }
        ],
        "no-unused-vars": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "one-var": [
            "error",
            {
                "initialized": "never",
                "uninitialized": "always"
            }
        ],
        "space-unary-ops": "error",
        "import/no-extraneous-dependencies": [
            0,
            {
                "extensions": [
                    ".jsx"
                ]
            }
        ],
        "import/no-useless-path-segments": "error",
        "import/prefer-default-export": 0,
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "parent",
                    "sibling",
                    "index"
                ],
                "newlines-between": "never"
            }
        ],
        "react/sort-prop-types": [
            "error",
            {
                "ignoreCase": true,
                "sortShapeProp": true
            }
        ]
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "env": {
        "es6": true,
        "browser": true,
        "amd": true,
        "node": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src"
                ]
            }
        },
        "react": {
            "version": "16"
        }
    }
}