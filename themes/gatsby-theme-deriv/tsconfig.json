{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "rendererOptions": {
                        "sass": {
                            "loadPaths": ["./src"]
                        }
                    }
                }
            }
        ]
    },
    "include": [
        "./src/**/*",
        "./src/custom.d.ts",
        "types/react-i18next.d.ts",
        "./src/types/utils.d.ts",
        "./src/global.d.ts"
    ],
}