{
  "include": [
    "./src/**/*",
    "./src/custom.d.ts"
  ],
  "jsx": "react",
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,

    "moduleResolution": "node"
  },
  "paths": {
    "react": [
      "node_modules/preact/compat/"
    ],
    "react-dom": [
      "node_modules/preact/compat/"
    ]
  }
}
